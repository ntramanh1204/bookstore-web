        <div class="container" style="margin: 10em;">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>My Profile</h4>
                        </div>
                        <div class="col-md-6 d-flex justify-content-end">
                            <a href="deleteAccount"><button class="btn btn-danger">Delete Account</button></a>
                        </div>
                    </div>
                    <form class="needs-validation" novalidate action="editAccount" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" placeholder="" value="${sessionScope.account.name}" required>
                            <div class="invalid-feedback">
                                Valid name is required.
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="phone" placeholder="" value="${sessionScope.account.phone}" required>
                            <div class="invalid-feedback">
                                Valid phone is required.
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="username" class="form-label">Username</label>
                            <div class="input-group has-validation">
                                <span class="input-group-text">@</span>
                                <input name="username" value="${sessionScope.account.username}" type="text" class="form-control" id="username" placeholder="Username" required>
                                <div class="invalid-feedback">
                                    Your username is required.
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label for="email" class="form-label">Email</label>
                            <input name="email" value="${sessionScope.account.email}" type="email" class="form-control" id="email" placeholder="you@example.com" required>
                            <div class="invalid-feedback">
                                Please enter a valid email address for shipping updates.
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <div class="input-group">
                            <input value="12345678901234567890" type="password" class="form-control" id="password" placeholder="Password" readonly>
                            <div class="input-group-append">
                                <a href="changePassword" class="btn btn-outline-secondary" type="button">Change password</a>
                            </div>
                            <div class="invalid-feedback">
                                Please enter a password.
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="address">Address</label>
                        <div class="input-group">
                            <input value="${sessionScope.account.address}" type="text" class="form-control" id="address" placeholder="Address">
                            <div class="invalid-feedback">
                                Please enter a valid address.
                            </div>
                        </div>
                    </div>

                    <p class="text-danger">${error}</p>
                    <!-- Add your form submit button here -->
                    <button class="btn btn-primary" type="submit">Save</button>
                </form>
